# Plugins are enabled in:
# ../autostart.d/02-hyprland-plugins.conf

# Plugins must be compiled and installed in order to work.
# See: https://wiki.hyprland.org/Plugins/Using-Plugins/#installing--using-plugins


# PLUGINS ARE HIGHLY EXPERIMENTAL AND DOESN'T WORK JUST YET.
plugin:hyprfocus {
    enabled = true
    opacity = 0.7

    bezier = flashIn, 0.5,0.0,1.0,0.5
    bezier = flashOut, 0.0,0.5,0.5,1.0

    flash_in_bezier = flashIn
    flash_in_speed = 1

    flash_out_bezier = flashOut
    flash_out_speed = 5
}
